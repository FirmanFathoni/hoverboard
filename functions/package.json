{
  "name": "hoverboard-functions",
  "private": true,
  "description": "Hoverboard serverless functions",
  "main": "dist/index.js",
  "engines": {
    "node": "12"
  },
  "scripts": {
    "build": "npm run clean && concurrently npm:build:*",
    "build:index": "cpx ../dist/index.html dist/",
    "build:src": "tsc",
    "clean": "rimraf dist",
    "deploy": "firebase deploy --only functions",
    "start": "npm run clean && tsc && concurrently --kill-others npm:start:*",
    "start:index": "npm run build:index -- --watch",
    "start:src": "npm run build:src -- --watch"
  },
  "dependencies": {
    "@google-cloud/storage": "^5.3.0",
    "child-process-promise": "^2.2.1",
    "cpx": "^1.5.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.2.0",
    "firebase-functions": "^3.11.0",
    "md5": "^2.3.0",
    "mkdirp-promise": "^5.0.1",
    "moment": "^2.29.1",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.3"
  }
}
